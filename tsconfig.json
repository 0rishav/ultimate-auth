{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./lib",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist"]
}
